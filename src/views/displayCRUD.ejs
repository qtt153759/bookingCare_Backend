<!--len mang thay cai style hay cau truc table nao dep thi copy-->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      table,
      th,
      td {
        border: 1px solid black;
        border-collapse: collapse;
      }
      .btn-edit{
          outline: none;
          border : none;
          background: orange;
          height: 25px;
          width: 60px;
          border-radius: 3px;
          cursor: pointer;
      }
      .btn-delete{
          outline: none;
          border : none;
          background: #ff023f;
          height: 25px;
          width: 60px;
          border-radius: 3px;
          cursor: pointer;
      }
    </style>
  </head>
  <body>
    <table style="width: 100%">
      <tr>
        <th>email</th>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Address</th>
        <th>Action</th>
      </tr>

      <% for(let i=0 ; i <dataTable.length ;i++) { %>         <!--Day la cau truc vong lap for-->
      <tr>
        <td><%= dataTable[i].email%></td>               
        <td><%= dataTable[i].firstName%></td>       <!--muon hien gia tri thi phai co dau "="-->
        <td><%= dataTable[i].lastName%></td>
        <td><%= dataTable[i].address%></td>
        <td>
            <a href="/edit-crud?id=<%= dataTable[i].id %>" class="btn-edit" type="button">edit</button>
            <a href="/delete-crud?id=<%= dataTable[i].id %>" class="btn-delete" type="button">delete</button>
        </td>
      </tr>
      <% } %>
    </table>
  </body>
</html>
